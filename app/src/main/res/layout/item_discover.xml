<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/normal_margin"
                                    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/discover_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/discover_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_iv"
            android:padding="@dimen/normal_padding"
            android:text="title"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:id="@+id/discover_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_title"
            android:paddingBottom="@dimen/normal_margin"
            android:paddingLeft="@dimen/normal_margin"
            android:paddingRight="@dimen/normal_margin"
            android:text="Large Text"
            android:textSize="@dimen/normal_text_size"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/discover_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:drawableLeft="@mipmap/emo_im_happy"
            android:text="12"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/discover_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/discover_content"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_toRightOf="@id/discover_praise"
            android:drawableLeft="@mipmap/emo_im_yelling"
            android:text="12"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/discover_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/discover_praise"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/normal_margin"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/small_padding"
            android:text="@string/detail"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>